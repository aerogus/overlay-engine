<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Overlay Engine</title>
  <link rel="stylesheet" href="/css/common.css">
  <link rel="stylesheet" href="/css/habillage.css">
</head>

<body>
  <div id="global">
    <div id="logo"></div>
    <div id="clock_wrap">
      <div id="clock">88H88</div>
      <div id="timeline">
        <div id="start">00H00</div>
        <div id="line">
          <div id="cursor"></div>
        </div>
        <div id="end">24H00</div>
      </div>
      <div id="show">BLP Radio</div>
    </div>
    <div class="onair_wrap">
      <div class="onair">
        <div class="artist"></div>
        <div class="title"></div>
      </div>
    </div>
    <div class="social_wrap">
      <div class="social folded">
        <div class="soc_hdr"><img class="soc_avatar" src="/img/avatar.svg" width="80" height="80" alt="">
          <div class="soc_hdr_meta">
            <div class="soc_name"></div>
            <div class="soc_screen_name"></div>
          </div>
        </div>
        <div class="soc_text"></div>
      </div>
    </div>
    <div class="footer">
      <div class="claim">Réagissez @adhocmusic · </div>
      <div class="news" id="tx"></div>
    </div>
  </div>
  <script>
    var app;
    var settings = settings || [];
    settings.ws = 'http://<%= ws_host %>:<%= ws_port %>';
  </script>
  <script src="/js/jquery-3.6.3.min.js"></script>
  <script src="/js/moment-2.29.4.min.js"></script>
  <script src="/js/telex-2.0.6.min.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script type="module">
    import {App} from './js/habillage.mjs';
    document.addEventListener('DOMContentLoaded', () => {
      app = new App();
    });
  </script>
</body>

</html>
