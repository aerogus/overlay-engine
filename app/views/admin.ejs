<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Habillage Admin</title>
  <link rel="stylesheet" href="/css/common.css">
  <link rel="stylesheet" href="/css/admin.css">
</head>

<body>
  <div id="main">
    <section id="habillage">
      <div id="video_wrap">
        <iframe id="video" src="/?bg=green" width="640" height="360" frameborder="0"></iframe>
      </div>
    </section>
    <div class="wall"></div>
  </div>
  <div id="cmd">

    <section id="live_song">
      <h2>Musique</h2>
      <input type="text" id="live_song_artist" placeholder="Artiste"/>
      <input type="text" id="live_song_title" placeholder="Titre"/>
      <button class="message" id="live_song_send">Envoyer</button>
    </section>

    <section id="live_telex">
      <h2>Telex</h2>
      <ul id="telex_list"></ul>
    </section>

    <section>
      <h2>Divers</h2>
      <button class="message" id="admin_logo">Logo</button>
      <button class="message" id="admin_clock">Horloge</button>
      <button class="message" id="admin_telex">Telex</button>
      <button class="message" id="admin_reactions">RÃ©actions</button>
      <button class="message" id="admin_autosong">Autosong</button>
    </section>

  </div>
  <script>
    var app;
    var settings = settings || [];
    settings.ws = 'http://<%= ws_host %>:<%= ws_port %>';
  </script>
  <script src="/js/jquery-3.6.3.min.js"></script>
  <script src="/js/moment-2.29.4.min.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script type="module">
    import {App} from './js/admin.mjs';
    document.addEventListener('DOMContentLoaded', () => {
      app = new App();
    });
  </script>
</body>

</html>
